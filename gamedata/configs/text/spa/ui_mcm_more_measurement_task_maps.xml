	<string id="ui_mcm_more_measurement_task_maps_title">
		<text>Más mapas en tareas de medición</text>
	</string>

	<string id="ui_mcm_more_measurement_task_maps_title_desc">
		<text>Este mod permite usar los mapas actuales y adyacentes en tareas de medición.\nTambién permite usar mapas específicos que están excluidos por defecto.</text>
	</string>

	<string id="ui_mcm_more_measurement_task_maps_override_eligible_map_distances_parameter">
